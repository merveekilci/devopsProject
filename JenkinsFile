pipeline {
    agent any
    
    environment {
        // Gradle ve Java için gerekli yolların belirlenmesi
        PATH="/mnt/c/Software/gradle-8.7/bin:${env.PATH}"
        registry = "mkilci2/app"
        registryCredentials = 'DHub-1'
        dockerImage = ''
    }

    stages {
        stage('Gradle and Java versions') {
            steps {
                sh './gradlew -v'
                sh 'java -version'
            }
        }

        stage('Checkout mp project from GitHub') {
            steps {
                git 'https://github.com/merveekilci/devopsProject.git'
            }
        }

        stage('Build jar file') {
            steps {
                sh './gradlew clean build'
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    dockerImage = docker.build registry
                }
            }
        }

        stage('Push the docker image to the hub') {
            steps {
                script {
                    docker.withRegistry('', registryCredentials) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Everything is fine.'
        }
    }
}
